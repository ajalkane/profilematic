#!/bin/sh
set -e

case "$1" in
    configure)
	# 1.4.0 had installation bug that could leave configuration files to user 'nobody'. Try to fix it:
	chown -R user:users /home/user/.config/ProfileMatic

    echo "Starting profilematicd ..."
    [[ -e /etc/init/apps/profilematicd.conf ]] && initctl start apps/profilematicd
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

